                      <m:mrow>
                        <m:mi>n</m:mi>
                        <m:mo stretchy="false">&gt;</m:mo>
                        <m:mi>y</m:mi>
                      </m:mrow>
                      <m:mo stretchy="false">(</m:mo>
                      <m:msub>
                        <m:mi>t</m:mi>
                        <m:mstyle fontsize="8pt">
                          <m:mrow>
                            <m:mi>o</m:mi>
                          </m:mrow>
                        </m:mstyle>
                      </m:msub>
                      <m:mo stretchy="false">)</m:mo>
                      <m:mo stretchy="false">)</m:mo>
                    </m:mrow>
                  </m:mrow>
