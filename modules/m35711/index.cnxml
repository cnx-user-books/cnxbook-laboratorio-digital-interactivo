                            </m:mrow>
                            <m:msqrt>
                              <m:mstyle fontstyle="italic">
                                <m:mrow>
                                  <m:mtext>Tb</m:mtext>
                                </m:mrow>
                              </m:mstyle>
                            </m:msqrt>
                            <m:mtext>.</m:mtext>
                            <m:msub>
                              <m:mi>U</m:mi>
                              <m:mstyle fontsize="8pt">
