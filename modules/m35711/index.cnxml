                              <m:mstyle fontstyle="italic">
                                <m:mrow>
                                  <m:mtext>dt</m:mtext>
                                </m:mrow>
                              </m:mstyle>
                            </m:mrow>
                          </m:mrow>
                          <m:mo stretchy="false">+</m:mo>
